@model Experience

@if (Model == null || Model.Name == "")
{
    ViewData["Name"] = "Create experience";
    <div class="text-center">
    <h2>@ViewData["Name"]</h2>
    </div>
    <br />
    <br />
}

else
{
    ViewData["Name"] = "Edit experience";
    <div class="text-center">
    <h4>@ViewData["Name"]</h4>
    </div>
    <br />
    <br />
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js" type="text/javascript"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js" type="text/javascript"></script>
<link href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="Stylesheet" type="text/css" />

<div class="container">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group row container">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10 container">
                <input asp-for="Name" width="100" class="form-control" placeholder="Title of experience" />
            </div>
            <div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row container">
            <label asp-for="ShortDescription" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10 container">
                <textarea asp-for="ShortDescription" width="100" class="form-control" placeholder="Location - type of relief area"></textarea>
            </div>
            <div>
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row container">
            <label asp-for="TripDescription" class="col-sm-2 col-form-label"></label>
            <div>
            <span asp-validation-for="TripDescription" class="text-danger"></span>
            </div>
            <div class="col-sm-10 container">
                <textarea asp-for="TripDescription" width="100" class="form-control" placeholder="What people will do on the journey"></textarea>
            </div>
        </div>

        <div class="form-group row container">
            <label asp-for="LongDescription" class="col-sm-2 col-form-label"></label>
            <div>
            <span asp-validation-for="LongDescription" class="text-danger"></span>
            </div>
            <div class="col-sm-10 container">
                <textarea asp-for="LongDescription" width="100" class="form-control" placeholder="Little history of the place"></textarea>
            </div>
        </div>


        <div class="form-group row container">
            <label asp-for="Price" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10 container">
                <input asp-for="Price" width="100" class="form-control" placeholder="Ex: 10$" />
            </div>
            <div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row container">
            <label asp-for="ImageThumbnailUrl" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10 container">
                <input asp-for="ImageThumbnailUrl" width="100" class="form-control" placeholder="Link of the photo - small size" />
            </div>
            <div>
                <span asp-validation-for="ImageThumbnailUrl" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row container">
            <label asp-for="ImageUrl" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10 container">
                <input asp-for="ImageUrl" width="100" class="form-control" placeholder="Link of the photo - large size" />
            </div>
        </div>

        <div class="text-center container">
            <button class="btn btn-dark" type="submit">Save</button>
            <a asp-action="Index" class="btn btn-outline-dark">Cancel</a>
        </div>
    </form>
</div>
